<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.moxuan.mapper.SysOrganizationMapper">
    <resultMap id="SysOrganization" type="net.moxuan.entity.SysOrganization">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="en_name" property="enName" jdbcType="VARCHAR"/>
        <result column="short_name" property="shortName" jdbcType="VARCHAR"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>
        <result column="sort_no" property="sortNo" jdbcType="TINYINT"/>
        <result column="is_enable" property="enable" jdbcType="TINYINT"/>
        <result column="is_deleted" property="deleted" jdbcType="TINYINT"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="save" parameterType="net.moxuan.entity.SysOrganization">
        insert into sys_organization
        (
         id,
         name,
         en_name,
         short_name,
         code,
         sort_no,
         is_enable,
         is_deleted,
         gmt_create,
         gmt_modified
        )
        values (
          #{id},
          #{name},
          #{enName},
          #{shortName},
          #{code},
          #{sortNo},
          #{enable},
          #{deleted},
          #{gmtCreate},
          #{gmtModified}
        )
    </insert>

    <select id="queryOrgByCode" resultType="java.lang.Integer">
        select count(*) from sys_organization
        where code = #{code}
    </select>

    <select id="queryOrgByName" resultType="java.lang.Integer">
        select count(*) from sys_organization
        where name = #{name}
    </select>

    <select id="total" resultType="java.lang.Integer">
        select count(*) from sys_organization
    </select>

</mapper>